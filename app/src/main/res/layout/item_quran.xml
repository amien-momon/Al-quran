<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingStart="4dp"
    android:paddingBottom="1dp"
    android:paddingEnd="1dp"
    android:paddingTop="1dp"
    android:layout_margin="1dp"
    android:background="@drawable/bg_list"
    android:orientation="vertical"
    android:layout_gravity=""
    android:id="@+id/rowQuranLayout">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:text="@string/_1"
                android:padding="2dp"
                android:textSize="14sp"
                android:layout_margin="4dp"
                android:textStyle="bold"
                android:background="@drawable/nomor"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_1"
                android:padding="2dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_ayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/_1"
                    android:padding="2dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ayat"
                    android:padding="2dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_asma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asma"
                android:fontFamily="@font/misbah"
                android:layout_marginEnd="30dp"
                android:padding="2dp"
                android:textSize="30sp" />

        </LinearLayout>
    </GridLayout>




</LinearLayout>